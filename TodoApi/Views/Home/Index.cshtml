@{
    ViewData["Title"] = "Todo App";
}

<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">

  <title>@ViewData["Title"]</title>
  <meta name="description" content="The Todo App">
  <meta name="author" content="Thanh Lam">

  <link rel="stylesheet" href="libs\bootstrap4\css\bootstrap.min.css">
  <link rel="stylesheet" href="libs\font-awesome-4.7.0\css\font-awesome.min.css">

  <!--[if lt IE 9]>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script>
  <![endif]-->
</head>

<body>
	
	<div class="container mt-5" ng-app="myApp" ng-controller="todoCtrl">
		
		<div class="card " ng-if=!showList>
		  <div class="card-block">
			<h3 ng-hide=editMode class="card-title">New Todo Item </h3>
			<h3 ng-show=editMode class="card-title">Edit Todo Item </h3>
				<form>
				  <div class="form-group">
					<label for="name">Name</label>
					<input type="text" class="form-control" id="name" placeholder="Enter task name" ng-model="detailModel.name">
				  </div>
				<form>
			<a href="#" ng-if=!editMode class="btn btn-success" ng-click=add(detailModel)>Save</a>
			<a href="#" ng-if=editMode class="btn btn-success" ng-click=update(detailModel)>Update</a>
			<a href="#" class="btn btn-secondary" ng-click="showListUI()">Cancel</a>
		  </div>
		</div>
		
		<div id="todo-items" class="mt-3" ng-if="showList">
			<h3>Todo Items</h3>
			<button class="btn btn-success mb-3" ng-click="new()">Create new item</button>
			<table class="table table-sm table-striped table-bordered ">
			  <thead>
				<tr class = "row">
				  <th class="text-center col-1">#</th>
				  <th class ="text-center col-6">Name</th>
				  <th class="text-center col-3">Complete</th>
					<th class="text-center col-2"></th>
				</tr>
			  </thead>
			  <tbody>
				
				<tr class="row" ng-repeat="t in todos">
					<th scope="row" class="text-center col-1">{{ t.id }}</th>
					<td class ="text-left col-6">{{ t.name }}</td>
					<td class="text-center col-3">
						<i ng-show="t.isComplete" class="text-success fa-4 fa fa-check-circle" aria-hidden="true"></i>
						<button ng-hide="t.isComplete" class="btn btn-sm btn-secondary" ng-click="makeComplete(t)">Make Complete</button>
					</td>
					<td class="text-center col-2">
						
						<a class="btn btn-sm btn-primary" href="#" ng-click="edit(t)">
							&nbsp;&nbsp;&nbsp;<i class=" fa fa-pencil"  aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;
						</a>
						<a class="btn btn-sm btn-danger" href="" ng-click="remove(t)">
							&nbsp;&nbsp;&nbsp;<i class=" fa fa-trash-o"  aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;
						</a>
					</td>
				</tr>
					<!--
				<tr>
				  <th scope="row">1</th>
				  <td>Mark Otto</td>
				  <td><i class="text-success fa-4 fa fa-check-circle" aria-hidden="true"></i></td>
				  
				</tr>
				<tr>
				  <th scope="row">2</th>
				  <td>JacobThornton</td>
				  <td><i class="text-success fa-4 fa fa-check-circle" aria-hidden="true"></i></td>
				  
				</tr>
				<tr>
				  <th scope="row">3</th>
				  <td >Larry the Bird</td>
				  <td><i class="text-success fa-4 fa fa-check-circle" aria-hidden="true"></i></td>
				</tr>
				-->
			  </tbody>
			</table>
		</div>
	</div>

  <script src="libs\jquery\jquery-3.2.1.min.js"></script>
  <script src="libs\tether\tether.min.js"></script>
  <script src="libs\bootstrap4\js\bootstrap.min.js"></script>
  <script src="libs\angular\angluar.min.1.6.4.js"></script>
  <script src="app\js\loglevel.js"></script>
  <script src="app\js\app.js"></script>
  
</body>
</html>
